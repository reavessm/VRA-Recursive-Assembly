set nobackup
syntax on
set backspace=indent,eol,start
colorscheme default
set number relativenumber

set nocompatible

filetype indent plugin on

set hidden
set wildmenu
set showcmd
set hlsearch
set autoindent
set ignorecase
set smartcase
set nostartofline
set ruler
set confirm
set visualbell
set mouse=a

set shiftwidth=4
set softtabstop=4
set expandtab

nnoremap <C-L> :nohl<CR><C-L>
